	<!-- green sphere -->
	<sphere radius="1.0" x="0.0" y="1.25" z="0.0">
		<color r="0.0" g="1.0" b="0.0" a="0.2"/>
		<material reflectance="0.1" refraction="1.1" phongExponent="16.0"/>
	</sphere>
	
