			lookAtX="0.0" lookAtY="2.0" lookAtZ="1.0"
			upX="0.0" upY="1.0" upZ="0.0"/>
	
	<!-- "ground" sphere -->
	<sphere radius="50.0" x="0.0" y="-50.0" z="0.0">
